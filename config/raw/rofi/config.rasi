configuration {
  combi-modi: "drun";
  font: "Menlo 14";
  width: 900px;
  border-color: #2e343f;
  show-icons: false;
  icon-theme: "Papirus";
  display-drun: "ï€‚";
  drun-display-format: "{name} [<span weight='light' size='small'><i>({generic})</i></span>]";
  location: 0;
  sidebar-mode: false;
}

 @theme "slate"
/* Dark theme. */

* {
  background-color: @bg;
  border-color: #2e343f;
  text-color: #8ca0aa;
  spacing: 0;
  width: 1000px;
  font: "Menlo 14";
  vertical-align: 0.5;
  show-icons: false;
  icon-theme: "Papirus";
  drun-display-format: "{name}";
}

inputbar {
  border: 0 0 1px 0;
  children: [entry];
  background-color:@win-bg;
}

prompt {
  padding: 16px;
  border: 0 1px 0 0;
}

textbox {
  border: 0 0 1px 0;
  border-color: #282C33;
  padding: 8px 16px;
}

entry {
  padding: 16px;
}

listview {
  cycle: false;
  margin: 0 0 -1px 0;
  scrollbar: true;
}

element {
  border: 0 0 1px 0;
  padding: 0px;
  children: [element-icon, element-text];
}

element selected.active {
   background-color: @bg;
   text-color: @selected-fg;
}

element selected.normal {
    background-color: @selected-bg;
}

element-icon {
  size: 4ch ;
  padding: 10px;
 }

element selected {
  background-color: @bg;
}

window {
  padding: 20%;
  height: 100%;
  width: 100%;
}
